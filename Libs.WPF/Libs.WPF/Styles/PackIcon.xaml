<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="clr-namespace:Libs.WPF.Controls.PackIcons">

    <Style x:Key="ButtonPackIconStyle" TargetType="icons:PackIcon">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="icons:PackIcon">
                    <Border x:Name="border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            BorderThickness="0"
                            Cursor="Hand">
                        <icons:PackIcon Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        Kind="{TemplateBinding Kind}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>