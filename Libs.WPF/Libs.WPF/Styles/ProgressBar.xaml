<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="clr-namespace:Libs.WPF.Controls.PackIcons">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Base/BaseColors.xaml" />
        <ResourceDictionary Source="../Converters/ConverterStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--BaseProgressBarStyle-->
    <Style x:Key="BaseProgressBarStyle"
           TargetType="{x:Type ProgressBar}">
        <Setter Property="Height"
                Value="32" />
        <Setter Property="SnapsToDevicePixels"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <!-- Label hiển thị phần trăm -->
                        <Label Foreground="{StaticResource HighlightColor}"
                               HorizontalAlignment="Center">
                            <Label.Content>
                                <MultiBinding Converter="{StaticResource ProgressBarToStringValue}">
                                    <Binding Path="Value"
                                             RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" />
                                </MultiBinding>
                            </Label.Content>
                        </Label>
                        <!-- Thanh nền -->
                        <Border Grid.Row="1"
                                Height="6"
                                Background="{StaticResource LowOpacityWhite}"
                                CornerRadius="3">
                            <!-- Thanh tiến trình -->
                            <Rectangle Height="6"
                                       Fill="{StaticResource HighlightColor}"
                                       RadiusX="3"
                                       RadiusY="3"
                                       HorizontalAlignment="Left">
                                <Rectangle.Width>
                                    <MultiBinding Converter="{StaticResource ProgressWidthConverter}">
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                 Path="ActualWidth" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                 Path="Value" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                 Path="Maximum" />
                                    </MultiBinding>
                                </Rectangle.Width>
                            </Rectangle>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ProgressBar}"
           BasedOn="{StaticResource BaseProgressBarStyle}" />

    <!--BitcoinProgressBar-->
    <Style x:Key="BitcoinProgressBar"
           TargetType="{x:Type ProgressBar}">
        <Setter Property="SnapsToDevicePixels"
                Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <icons:PackIcon x:Name="PART_Icon"
                                        Width="28"
                                        Height="28"
                                        Padding="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource HighlightColor}"
                                        Kind="Bitcoin"
                                        SnapsToDevicePixels="False">
                            <icons:PackIcon.Margin>
                                <MultiBinding Converter="{StaticResource ProgressBarToPosition}">
                                    <Binding Path="Value"
                                             RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type ProgressBar}}" />
                                </MultiBinding>
                            </icons:PackIcon.Margin>
                            <icons:PackIcon.Visibility>
                                <MultiBinding Converter="{StaticResource ProgressBarToVisibility}">
                                    <Binding Path="Value"
                                             RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type ProgressBar}}" />
                                </MultiBinding>
                            </icons:PackIcon.Visibility>
                        </icons:PackIcon>

                        <icons:PackIcon Width="28"
                                        Height="28"
                                        Padding="0"
                                        Margin="0 0 -2.3 0"
                                        HorizontalAlignment="Right"
                                        HorizontalContentAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource HighlightColor}"
                                        Kind="WalletOutline" />

                        <!-- Thanh nền -->
                        <Border Grid.Row="1"
                                Height="6"
                                Background="{StaticResource LowOpacityWhite}"
                                CornerRadius="3">
                            <!-- Thanh tiến trình -->
                            <Rectangle Height="6"
                                       Fill="{StaticResource HighlightColor}"
                                       RadiusX="3"
                                       RadiusY="3"
                                       HorizontalAlignment="Left">
                                <Rectangle.Width>
                                    <MultiBinding Converter="{StaticResource ProgressWidthConverter}">
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                 Path="ActualWidth" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                 Path="Value" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                                 Path="Maximum" />
                                    </MultiBinding>
                                </Rectangle.Width>
                            </Rectangle>
                        </Border>

                        <!-- Label hiển thị phần trăm -->
                        <Label  Grid.Row="2"
                                Foreground="{StaticResource HighlightColor}"
                                HorizontalAlignment="Center">
                            <Label.Content>
                                <MultiBinding Converter="{StaticResource ProgressBarToStringValue}">
                                    <Binding Path="Value"
                                             RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" />
                                </MultiBinding>
                            </Label.Content>
                        </Label>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>