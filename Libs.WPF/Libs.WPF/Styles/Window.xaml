<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Base/BaseColors.xaml" />
        <ResourceDictionary Source="../Converters/ConverterStyles.xaml" />
        <ResourceDictionary Source="TextBox.xaml" />
        <ResourceDictionary Source="Button.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DarkWindowStyle"
           TargetType="Window">
        <Setter Property="Background"
                Value="{StaticResource BackgroundColor}" />
        <Setter Property="Foreground"
                Value="{StaticResource ForegroundColor}" />
        <Setter Property="FontFamily"
                Value="Comfortaa" />
        <Setter Property="FontWeight"
                Value="Normal" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="MinHeight"
                Value="100" />
        <Setter Property="MinWidth"
                Value="120" />
        <Setter Property="AllowsTransparency"
                Value="True" />
        <Setter Property="WindowStyle"
                Value="None" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid Margin="5">
                        <!--  Hiệu ứng viền sáng  -->
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="4"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Color="White" />
                        </Grid.Effect>
                        <!--  Tạo đường viền bo góc  -->
                        <Border Background="{StaticResource BackgroundColor}"
                                CornerRadius="8" />
                        <Grid Margin="8 0 8 8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <!--  Tiêu đề cửa sổ  -->
                            <Border x:Name="TitleBarBorder"
                                    Background="{StaticResource BackgroundColor}">
                                <Grid Margin="0"
                                      Height="28"
                                      x:Name="TitleBar">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                        <!--  Icon  -->
                                        <Image Width="16"
                                               Height="16"
                                               Margin="0,0,4,0"
                                               Source="{TemplateBinding Icon}"
                                               Stretch="Fill"
                                               Visibility="{TemplateBinding Icon,
                                                                     Converter={StaticResource NullToCollapsed}}" />
                                        <!--  Tiêu đề  -->
                                        <TextBlock Foreground="DarkGray"
                                                   Text="{TemplateBinding Title}" />
                                    </StackPanel>

                                    <!--  Nút điều khiển: Minimize, Maximize, Close  -->
                                    <StackPanel Grid.Column="1"
                                                Panel.ZIndex="999"
                                                Height="32"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                        <Button x:Name="BtnSnapshot"
                                                Style="{StaticResource SnapshotStyle}" />
                                        <Button x:Name="BtnSmallWindow"
                                                Style="{StaticResource SmallWindowStyle}" />
                                        <Button x:Name="BtnMinimize"
                                                Style="{StaticResource MinimizeStyle}" />
                                        <Button x:Name="BtnMaximize"
                                                Style="{StaticResource MaximizeStyle}" />
                                        <Button x:Name="BtnExit"
                                                Style="{StaticResource CloseStyle}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!--  Các nội dung của Window khi được thiết kế  -->
                            <ContentPresenter Grid.Row="1"
                                              Panel.ZIndex="-1" />

                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  TargetType="Window"
            BasedOn="{StaticResource DarkWindowStyle}" />

    <Style x:Key="DialogStyle"
           TargetType="{x:Type Window}">
        <Setter Property="Width"
                Value="520" />
        <Setter Property="Height"
                Value="330" />
        <Setter Property="Background"
                Value="{StaticResource BackgroundColor}" />
        <Setter Property="Foreground"
                Value="{StaticResource ForegroundColor}" />
        <Setter Property="FontFamily"
                Value="Comfortaa" />
        <Setter Property="FontWeight"
                Value="Normal" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="MinHeight"
                Value="100" />
        <Setter Property="MinWidth"
                Value="100" />
        <Setter Property="AllowsTransparency"
                Value="True" />
        <Setter Property="WindowStyle"
                Value="None" />
        <Setter Property="SnapsToDevicePixels"
                Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Grid Margin="8">
                        <!--  Hiệu ứng viền sáng  -->
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="8"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShadowColor}" />
                        </Grid.Effect>

                        <!--  Tạo đường viền bo góc  -->
                        <Border Background="{StaticResource BackgroundColor}"
                                CornerRadius="8" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <!--  Tiêu đề cửa sổ  -->
                            <Grid Margin="8 2 4 -2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <!--  Icon  -->
                                    <Image Width="16"
                                           Height="16"
                                           Margin="0 0 4 0"
                                           Source="{TemplateBinding Icon}"
                                           Stretch="Fill"
                                           Visibility="{TemplateBinding Icon,
                                                                    Converter={StaticResource NullToCollapsed}}" />
                                    <!--  Tiêu đề  -->
                                    <TextBlock FontWeight="Bold"
                                               Foreground="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShadowColor}"
                                               Text="{TemplateBinding Title}" />
                                </StackPanel>

                                <!--  Nút điều khiển: Close  -->
                                <Button x:Name="BtnExit"
                                        Grid.Column="1"
                                        Height="32"
                                        Style="{StaticResource CloseStyle}" />
                            </Grid>

                            <!--  Nội dung thông báo  -->
                            <TextBox Grid.Row="1"
                                     x:Name="TbMessage"
                                     Style="{StaticResource MultiLineTextBoxStyle}"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     Margin="4 0 4 32"
                                     Foreground="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShadowColor}"
                                     Background="Transparent"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>