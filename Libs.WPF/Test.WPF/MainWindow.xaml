<wd:DarkWindow x:Class="Test.WPF.MainWindow"
               xmlns:wd="clr-namespace:Libs.WPF.Controls.Windows;assembly=Libs.WPF"
               Style="{StaticResource DarkWindowStyle}"
               xmlns:scbb="clr-namespace:Libs.WPF.Controls.SearchableComboBox;assembly=Libs.WPF"
               xmlns:icons="clr-namespace:Libs.WPF.Controls.PackIcons;assembly=Libs.WPF"
               xmlns:menu="clr-namespace:Libs.WPF.Controls.Menu;assembly=Libs.WPF"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:local="clr-namespace:Test.WPF"
               mc:Ignorable="d"
               Title="Main Window"
               Height="3000"
               Width="1200">

    <ScrollViewer>
        <StackPanel Margin="0 0 0 32">
            <!--TextBlock-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Default TextBlock" />
                <!--Disabled-->
                <TextBlock Text="Disable TextBlock"
                           IsEnabled="False"
                           Grid.Column="2" />
            </Grid>

            <!--DatePicker-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <DatePicker />
                    <DatePicker SelectedDate="2025/05/25"
                                Margin="0 4 0 0" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <DatePicker />
                    <DatePicker SelectedDate="2025/05/25"
                                Margin="0 4 0 0" />
                </StackPanel>
            </Grid>

            <!--TextBox-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBox Text="Default TextBox" />
                    <TextBox Text="ReadOnly TextBox"
                             Style="{StaticResource ReadOnlyTextBoxStyle}" />
                    <TextBox Text="Multi-Line 1 TextBox&#x0A;Multi-Line 2 TextBox&#x0A;Multi-Line 3 TextBox&#x0A;Multi-Line 4 TextBox&#x0A;"
                             Style="{StaticResource MultiLineTextBoxStyle}" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <TextBox Text="Default TextBox" />
                    <TextBox Text="ReadOnly TextBox"
                             Style="{StaticResource ReadOnlyTextBoxStyle}" />
                    <TextBox Text="Multi-Line 1 TextBox&#x0A;Multi-Line 2 TextBox&#x0A;Multi-Line 3 TextBox&#x0A;Multi-Line 4 TextBox&#x0A;"
                             Style="{StaticResource MultiLineTextBoxStyle}" />
                </StackPanel>
            </Grid>


            <!--Label-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Label Content="Sub Label"
                           Style="{StaticResource SubLabelStyle}" />
                    <Label Content="Default Label" />
                    <Label Content="Highlight Label"
                           Style="{StaticResource HighlightLabelStyle}" />
                    <Label Content="Highlight Bold Label"
                           Style="{StaticResource BoldHighlightLabelStyle}" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <Label Content="Sub Label"
                           Style="{StaticResource SubLabelStyle}" />
                    <Label Content="Default Label" />
                    <Label Content="Highlight Label"
                           Style="{StaticResource HighlightLabelStyle}" />
                    <Label Content="Highlight Bold Label"
                           Style="{StaticResource BoldHighlightLabelStyle}" />
                </StackPanel>
            </Grid>


            <!--Button-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Button Content="Sub Button"
                            Style="{StaticResource SubButtonStyle}" />
                    <Button Content="Default Button" />
                    <Button Content="Highlight Button"
                            Style="{StaticResource HighlightButtonStyle}" />
                    <Button Tag="Tune"
                            Style="{StaticResource IconButtonStyle}" />
                    <Button Tag="Tune"
                            Content="Icon Text Button"
                            Style="{StaticResource IconTextButtonStyle}" />
                    <Button Tag="Send"
                            Content="Border Button"
                            Style="{StaticResource IconTextBorderButtonStyle}" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <Button Content="Sub Button"
                            Style="{StaticResource SubButtonStyle}" />
                    <Button Content="Default Button" />
                    <Button Content="Highlight Button"
                            Style="{StaticResource HighlightButtonStyle}" />
                    <Button Tag="Tune"
                            Style="{StaticResource IconButtonStyle}" />
                    <Button Tag="Tune"
                            Content="Icon Text Button"
                            Style="{StaticResource IconTextButtonStyle}" />
                    <Button Tag="Send"
                            Content="Border Button"
                            Style="{StaticResource IconTextBorderButtonStyle}" />
                </StackPanel>
            </Grid>


            <!--CheckBox-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <CheckBox Content="Default CheckBox" />
                    <CheckBox Content="Default CheckBox"
                              IsChecked="True" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <CheckBox Content="Default CheckBox" />
                    <CheckBox Content="Default CheckBox"
                              IsChecked="True" />
                </StackPanel>
            </Grid>


            <!--RadioButton-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <RadioButton Content="Default RadioButton" />
                    <RadioButton Content="Checked RadioButton"
                                 IsChecked="True" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <RadioButton Content="Default RadioButton" />
                    <RadioButton Content="Checked RadioButton"
                                 IsChecked="True" />
                </StackPanel>
            </Grid>


            <!--GroupBox-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <GroupBox Header="Default GroupBox"
                              Height="70">
                        <StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Panel GroupBox"
                              Style="{StaticResource PanelGroupBoxStyle}"
                              Height="70"
                              Margin="0 8 0 0">
                        <StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <GroupBox Header="Default GroupBox"
                              Height="70">
                        <StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Panel GroupBox"
                              Style="{StaticResource PanelGroupBoxStyle}"
                              Height="70"
                              Margin="0 8 0 0">
                        <StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>


            <!--ComboBox-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <ComboBox ItemsSource="{Binding StringList}"
                              SelectedItem="{Binding SelectedStringItem, UpdateSourceTrigger=PropertyChanged}" />
                    <scbb:SearchableComboBox ItemsSource="{Binding StringList}"
                                             SelectedItem="{Binding SelectedStringItem, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0 4 0 0" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <ComboBox ItemsSource="{Binding StringList}"
                              SelectedItem="{Binding SelectedStringItem, UpdateSourceTrigger=PropertyChanged}" />
                    <scbb:SearchableComboBox ItemsSource="{Binding StringList}"
                                             SelectedItem="{Binding SelectedStringItem, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0 4 0 0" />
                </StackPanel>
            </Grid>


            <!--DataGrid-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <DataGrid ItemsSource="{Binding SampleItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id"
                                                Binding="{Binding Id}"
                                                Width="50" />
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Name}"
                                                Width="200" />
                            <DataGridCheckBoxColumn Header="IsMale"
                                                    Binding="{Binding IsMale}"
                                                    Width="50" />
                            <!--List Inside-->
                            <DataGridTemplateColumn Header="List Inside"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SelectedSkill}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.Skills, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <!--List Outside-->
                            <DataGridTemplateColumn Header="List Outside"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SelectedString}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.StringList, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <DataGrid ItemsSource="{Binding SampleItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id"
                                                Binding="{Binding Id}"
                                                Width="50" />
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Name}"
                                                Width="200" />
                            <DataGridCheckBoxColumn Header="IsMale"
                                                    Binding="{Binding IsMale}"
                                                    Width="50" />
                            <!--List Inside-->
                            <DataGridTemplateColumn Header="List Inside"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SelectedSkill}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.Skills, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <!--List Outside-->
                            <DataGridTemplateColumn Header="List Outside"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SelectedString}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.StringList, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>


            <!--Menu Tabs-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--Menu-->
                        <StackPanel>
                            <!--Features-->
                            <menu:MenuRadioButton Kind="ViewDashboardOutline"
                                                  IsChecked="True"
                                                  ContentEN="Features"
                                                  ContentVI="Chức năng" />
                            <!--Setting-->
                            <menu:MenuRadioButton Kind="Tune"
                                                  ContentEN="Setting"
                                                  ContentVI="Thiết lập" />
                            <!--Help-->
                            <menu:MenuRadioButton Kind="HelpCircleOutline"
                                                  ContentEN="Help"
                                                  ContentVI="Trợ giúp" />
                        </StackPanel>

                        <!--Pages-->
                        <Frame Grid.Column="1"
                               Content="{Binding SelectedPage, UpdateSourceTrigger=PropertyChanged}"
                               NavigationUIVisibility="Hidden" />
                    </Grid>
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--Menu-->
                        <StackPanel>
                            <!--Features-->
                            <menu:MenuRadioButton Kind="ViewDashboardOutline"
                                                  IsChecked="True"
                                                  ContentEN="Features"
                                                  ContentVI="Chức năng" />
                            <!--Setting-->
                            <menu:MenuRadioButton Kind="Tune"
                                                  ContentEN="Setting"
                                                  ContentVI="Thiết lập" />
                            <!--Help-->
                            <menu:MenuRadioButton Kind="HelpCircleOutline"
                                                  ContentEN="Help"
                                                  ContentVI="Trợ giúp" />
                        </StackPanel>

                        <!--Pages-->
                        <Frame Grid.Column="1"
                               Content="{Binding SelectedPage, UpdateSourceTrigger=PropertyChanged}"
                               NavigationUIVisibility="Hidden" />
                    </Grid>
                </StackPanel>
            </Grid>


            <!--Expander-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Expander Header="Expander Header">
                        <Grid>

                        </Grid>
                    </Expander>
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <Expander Header="Expander Header">
                        <Grid>

                        </Grid>
                    </Expander>
                </StackPanel>
            </Grid>



            <!--Calender-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>

                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">

                </StackPanel>
            </Grid>

            <!--TreeView-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>

                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">

                </StackPanel>
            </Grid>

            <!--ProgressBar-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <ProgressBar Value="33"/>
                    
                    <ProgressBar Value="33"
                                 Style="{StaticResource BitcoinProgressBar}"
                                 Margin="0 8 0 0" />
                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">
                    <ProgressBar Value="33" />

                    <ProgressBar Value="33"
                                 Style="{StaticResource BitcoinProgressBar}"
                                 Margin="0 8 0 0" />
                </StackPanel>
            </Grid>

            <!--ItemControl-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>

                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">

                </StackPanel>
            </Grid>

            <!--Image-->
            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>

                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">

                </StackPanel>
            </Grid>


            <Grid Margin="0 32 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel>

                </StackPanel>
                <!--Disabled-->
                <StackPanel Grid.Column="2"
                            IsEnabled="False">

                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>

</wd:DarkWindow>